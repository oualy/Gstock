{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
 {% block stylesheets %}
  <link href="css/main.css" rel="stylesheet">
{% endblock %}
{% block body %}

<div class="login-wrap">
   <div class="login-html">
		<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
		<input id="tab-2" type="radio" name="tab" class="sign-up"><label class="tab"><a href="#">connecte toi</a></label>
	   <div class="login-form">
            <form method="post" class="row g-3">
               {% if error %}
                  <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
               {% endif %}

               {% if app.user %}
                    <div class="mb-3">
                         vous étes connecter : {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                     </div>
               {% endif %}

               <div class="sign-in-htm">
                   <div class="group">
                     <label for="inputEmail" class="label">Email</label>
                       <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div class="group">
                      <label for="inputPassword" class="label">Password</label>
                      <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                   </div>
                   <div class="group">
					  <input id="check" type="checkbox" class="check" checked>
					 <label for="check"><span class="icon"></span> Gardez-moi connecté</label>
				   </div>
                  <div class="group">
                       {#  <button class="btn btn-lg btn-primary" type="submit">
                          Sign in
                        </button>
                        #}
                     <input type="submit" class="button" value="Sign In">
                    </div>
                   <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}" >
               </div>
     
               {#
               Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
               See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
               <label>
               <input type="checkbox" name="_remember_me"> Remember me
                </label>
               </div>
              #}
              
            </form>
         </div>
      </div>
   </div>
{% endblock %}
